int leds[] = {2, 4, 7, 8, 12};
bool reverse = true;
int d = 50;

void setup() {
  //initialize the Serial console
  Serial.begin(9600);
  //initialize pins
  for(int i = 0; i < 5; i++){
    pinMode(leds[i], OUTPUT);
  }
}

void loop() {
  //preprocessor for reverse
  
  #if reverse
  for(int i = 0; i < 5; i++){
  #endif
  
  #if !reverse
  for(int i = 4; i > -1; i--){
  #endif
    int led = leds[i];
    digitalWrite(led, HIGH);
    delay(d);
    digitalWrite(led, LOW);
  }
}
